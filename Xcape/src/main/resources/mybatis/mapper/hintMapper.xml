    <update id="modifyMessage">
        UPDATE
            `hint`
        SET
            <if test="message1 != null">
                `message1` = #{message1}
            </if>
            <if test="message2 != null">
                `message2` = #{message2}
            </if>
        WHERE
            `seq` = #{seq}
--         AND
--             `store_name` = #{storeName};
    </update>

    <update id="deleteHint">
        UPDATE
            `hint`
        SET
            `use` = 'N'
        WHERE
            `seq` = #{seq}
--         AND
--             `store_name` = #{storeName};
    </update>
    
    <select id="getHintCount" resultType="int">
        SELECT
            count(`key`)
            AS `count`
        FROM
             hint
        WHERE
              `key` = #{key}
--         AND
--               `store_name` = #{storeName};
    </select>

    <update id="modifyHintCode">
        UPDATE
            `hint`
        SET
            `key` = #{key}
        WHERE
            `seq` = #{seq}
--         AND
--             `store_name` = #{storeName};
    </update>

</mapper>